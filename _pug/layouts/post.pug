article.post
  .post-header
    h1.post-title {{ page.title }}
    p.post-meta.post-date
      time {{ page.date | date: "%b %-d, %Y" }}
    p.post-meta.post-tag
      | {% for tags in page.tags %}
      | \#{{tags}}
      | {% endfor %}

  .post-content {{ content }}

  hr

  .post-meta.post-comments
    div.text-center
      a(onclick="load_disqus();return false;")#pushcomments Push button. Receive comments.
    div#disqus_thread
    script.
      var disqus_config = function () {
          this.page.url = '{{ site.url }}{{ page.url }}';
          this.page.identifier = '{{ page.id }}';
      };
      function load_disqus() {
        (function() {
            var d = document;

            // Hide the push button.
            document.getElementById('pushcomments').style.display = 'none';

            // Load Disqus.
            var s = d.createElement('script');
            s.src = '//sonph.disqus.com/embed.js';
            s.setAttribute('data-timestamp', +new Date());
            (d.head || d.body).appendChild(s);
        })();
      }
    noscript Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a>
